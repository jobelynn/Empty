<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewVerificationMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Thanks! Please verify your account via the email we've just sent to your account."
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:padding="16dp" />

    <TextView
        android:id="@+id/textViewBackToLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Back to Login"
        android:textColor="@color/purple_500"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/textViewVerificationMessage"
        android:layout_marginTop="30dp"
        android:padding="12dp" />
</RelativeLayout>